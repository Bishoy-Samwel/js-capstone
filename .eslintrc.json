{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
  "import/no-extraneous-dependencies": [
      "warn",
      {
          "devDependencies": true,
          "optionalDependencies": true,
          "peerDependencies": true
      }
  ]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
